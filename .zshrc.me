

# func
load() {
    if [ -f $1 ];then
        source $1
    fi
}

peco-src() {
    local src=$(ghq list --full-path | peco --query "$LBUFFER")
    if [ -n "$src" ]; then
        BUFFER="cd $src"
        zle accept-line
    fi
    zle -R -c
}
zle -N peco-src

# keybind
bindkey "^O" kill-word
bindkey "^]" forward-word
bindkey "^J" backward-word
bindkey '^Q' peco-src

